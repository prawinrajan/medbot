<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/colorBackground"
    tools:context=".MainActivity"
    android:padding="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/colorBackground">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Need Help!"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:background="@drawable/my_button"
                android:padding="5dp"
                android:id="@+id/e1"
                android:onClick="needhelpCall"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Urgent Help!"
                android:onClick="needUrgetHelpCall"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:background="@drawable/my_button"
                android:padding="5dp"
                android:id="@+id/e2"/>

        </GridLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Update Profile"
                    android:onClick="UpdateProfileCall"
                    android:layout_margin="5dp"
                    android:textColor="@color/textColor"
                    android:background="@drawable/my_button"
                    android:padding="10dp"
                    android:id="@+id/UpdateProfile"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Get counselling"
            android:onClick="getCounsellingCall"
            android:layout_margin="5dp"
            android:textColor="@color/textColor"
            android:background="@drawable/buttonborder"
            android:padding="10dp"
            android:id="@+id/getcounselling"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add Report"
            android:layout_margin="5dp"
            android:onClick="addReportCall"
            android:textColor="@color/textColor"
            android:background="@drawable/my_button"
            android:padding="5dp"
            android:id="@+id/addreport"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Emergency Details"
            android:onClick="emergencyDetailsCall"
            android:layout_margin="5dp"
            android:textColor="@color/textColor"
            android:background="@drawable/my_button"
            android:padding="5dp"
            android:id="@+id/emergencyDetails"
            />

    </LinearLayout>

</ScrollView>